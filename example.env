#### keys do ambiente producao
BINANCE_API_KEY=your_key
BINANCE_API_SECRET=your_key

#### Keys do ambiente de teste, usado para treinamento e teste
BINANCE_API_KEY_TESTNET=your_key
BINANCE_API_SECRET_TESTNET=your_key

#### API de site de noticias
NEWS_API_KEY=your_key

#### Configurações gerais
# Par de trading na Binance (Ex: BTCUSDT, ETHUSDT, etc)
SYMBOL=BTCUSDT

# Intervalo do gráfico (1m, 5m, 15m, 1h, etc.) - 15m é ideal para day trading com menor ruído que timeframes menores
INTERVAL=15m

# Data de início para treinamento do modelo - períodos mais longos podem melhorar a precisão, mas também podem incluir condições de mercado obsoletas
MODEL_DATA_TRAINING_START_DATE='1 Jan, 2021'

# Número de períodos futuros para previsão do modelo - 6 períodos (1.5h) é adequado para day trading em 15min
# Valores maiores tendem a ter previsões menos precisas, valores menores podem não capturar tendências completas
MODEL_DATA_PREDICTION_HORIZON=6

# Ativa/desativa análise de sentimento para notícias - pode melhorar previsões durante eventos importantes de mercado
SENTIMENT_ANALYSIS_ENABLED=false

#### Configurações de capital e risco
# Capital total disponível para trading
CAPITAL=1000.0

# Multiplicador de alavancagem - maior alavancagem aumenta lucros potenciais mas também aumenta o risco de liquidação
LEVERAGE=5

# Percentual de risco por trade - CRÍTICO para preservação de capital
# 0.02 = 2% (recomendado) - valores acima de 5% são extremamente arriscados
# Aumentar esse valor aumenta dramaticamente o risco de ruína da conta
RISK_PER_TRADE=0.02

# Limite máximo de tamanho da posição em % do capital (com alavancagem)
# Limita a exposição total mesmo em condições muito favoráveis
# Valores maiores aumentam a exposição máxima possível
MAX_POSITION_SIZE_PCT=0.30

#### Thresholds de entrada
# Pontuação mínima (0-1) para aceitar um trade - valor padrão para condições normais de mercado
# Diminuir permite mais trades mas de menor qualidade, aumentar melhora qualidade mas reduz frequência
ENTRY_THRESHOLD_DEFAULT=0.60

# Threshold para mercados em lateralização - mais alto para evitar falsas quebras
ENTRY_THRESHOLD_RANGE=0.75

# Threshold para mercados voláteis - mais alto para evitar whipsaws (movimentos falsos)
ENTRY_THRESHOLD_VOLATILE=0.85

# Threshold para trades na direção da tendência - mais baixo para aproveitar impulsos favoráveis
# Permite entradas mais agressivas quando o trade está alinhado com a tendência principal
ENTRY_THRESHOLD_TREND_ALIGNED=0.55

# Threshold para trades contra a tendência - mais alto para exigir sinais muito fortes
# Aumenta a seletividade quando tentando operar contra a tendência dominante
ENTRY_THRESHOLD_TREND_AGAINST=0.80

#### Configurações de Risk/Reward
# Razão mínima entre take profit e stop loss - define qualidade mínima aceitável do trade
# Valores menores permitem mais oportunidades mas com expectativa menor por trade
MIN_RR_RATIO=1.25

# Multiplicador do ATR para cálculo de stop loss dinâmico
# Maior = stops mais amplos (menos stop outs, mas perdas maiores quando atingidos)
# Menor = stops mais apertados (mais stop outs, mas perdas menores)
ATR_MULTIPLIER=1.3

# Fator de ajuste para take profits em mercados laterais - reduz expectativas em mercados sem momentum
TP_ADJUSTMENT_RANGE=0.7

# Fator de ajuste para stop loss em mercados laterais - mais próximos para limitar perdas
SL_ADJUSTMENT_RANGE=0.7

# Fator de ajuste para take profits em mercados voláteis - aumenta para capturar movimentos mais amplos
TP_ADJUSTMENT_VOLATILE=1.2

# Fator de ajuste para stop loss em mercados voláteis - aumenta para evitar stop outs por ruído
SL_ADJUSTMENT_VOLATILE=1.3

#### Parâmetros de volatilidade
# Percentual de ATR/preço acima do qual o mercado é considerado altamente volátil
# Maior volatilidade leva a posições menores e stops mais amplos
VOLATILITY_HIGH_THRESHOLD=1.5

# Percentual de ATR/preço abaixo do qual o mercado é considerado de baixa volatilidade
# Baixa volatilidade permite posições maiores e stops mais apertados
VOLATILITY_LOW_THRESHOLD=0.4

#### Trailing stop
# Ativa/desativa o uso de trailing stop (stop dinâmico que segue o preço)
# Ajuda a proteger lucros em movimentos fortes favoráveis
TRAILING_STOP_ENABLED=true

# Percentual de lucro necessário para ativar o trailing stop
# Menor = ativa mais cedo (protege mais, mas pode sair prematuramente de grandes movimentos)
TRAILING_STOP_ACTIVATION_PCT=1.0

# Distância do trailing stop em relação ao preço máximo/mínimo atingido
# Menor = mais próximo do preço (protege mais lucros, mas mais chance de stop out prematuro)
TRAILING_STOP_DISTANCE_PCT=0.5

#### Take profit parcial
# Ativa/desativa a realização parcial de lucros
# Permite assegurar parte do lucro enquanto mantém exposição para movimentos maiores
PARTIAL_TP_ENABLED=true

# Percentual do alvo de TP onde a primeira realização parcial acontece
# Ex: 0.5 = realiza metade da posição ao atingir 50% do alvo total
PARTIAL_TP_PCT=0.5

# Percentual da posição a ser fechado no primeiro take profit
# Maior = menos exposição restante para movimento completo
PARTIAL_TP_POSITION_PCT=0.5
